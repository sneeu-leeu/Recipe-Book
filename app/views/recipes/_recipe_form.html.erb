<%= form_with(model: recipe, url: recipes_path) do |form|%>
  <div class="form-element">
    <%= form.label :name, "Recipe Name:" %>
    <%= form.text_field :name, placeholder: 'Name of the Recipe', class:"form-text" %>
  </div>
  <br>
  <div class="form-element">
    <%= form.label :cooking_time, "Cooking Time:"%>
    <%= form.text_field :cookingTime, placeholder: 'Cooking Time of the Recipe', class:"form-text" %>
  </div>
  <br>
  <div class="form-element">
    <%= form.label :prepation_time, "Prepation Time:" %>
    <%= form.text_field :prepationTime, placeholder: 'Prepation Time of the Recipe', class:"form-text" %>
  </div>
  <br>
  <div class="form-element">
    <%= form.label :description, "Description:" %>
    <%= form.text_area :description, placeholder: 'Description of the Recipe', class:'form-text-area' %>
  </div>
  <br>
  <div class="form-element">
    <%= form.submit class:'button-class'%>
  </div>
<% end %>