<%= form_with(model: recipe, url: recipes_path) do |form|%>
  <%= form.text_field :name, placeholder: 'Name', id:"name", class:"form-control" %>
  <br>
  <%= form.text_field :cookingTime, placeholder: 'Cooking time', id:"cookingTime", class:"form-control" %>
  <br>
  <%= form.text_field :preparationTime, placeholder: 'Preparation time', id:"preparationTime",class:"form-control" %>
  <br>
  <%= form.text_area :description, placeholder: 'Description', id:"description", class:"form-control" %>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>